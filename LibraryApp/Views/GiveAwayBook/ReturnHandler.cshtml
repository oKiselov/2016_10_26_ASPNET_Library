@using LibraryApp.Models
@model LibraryApp.Models.Book
@{
    ViewBag.Title = "ReturnHandler";
}

@helper ShowList(List<Book> books)
{
    <table>
        @for (int i = 0; i < books.Count; i++)
        {
            <tr>
                <td>
                    @(i + 1)
                </td>
                <td>
                    @books[i].BookId
                </td>
                <td>
                    @books[i].Title
                </td>
                <td>
                    @books[i].Keeper
                </td>
            </tr>
        }
    </table>
}

<h1>Return book options</h1>
<h2>Step 2</h2>

@using (Html.BeginForm("ReturnFinish", "GiveAwayBook"))
{
    <fieldset>
        <legend>List of books with such name</legend>
        <div>
            <label>
                @ShowList(ViewBag.Books)
            </label>
        </div>
        <div>
            <label>Fill gaps with available Book's ID and User's e-mail</label>
            <label>Book Id:</label>
            @Html.TextBox("strBookId")
            <label>User's e-mail</label>
            @Html.TextBox("strMail")
        </div>

        <input type="submit" name="submitbutton" value="OK" />
    </fieldset>
}
