@using LibraryApp.Models
@model LibraryApp.Models.Book
@{
    ViewBag.Title = "DeleteBookFormHandler";
}

@helper ShowList(List<Book> books)
{
    <table>
        @for (int i = 0; i < books.Count; i++)
        {
            <tr>
                <td>
                    @(i + 1)
                </td>
                <td>
                    @books[i].BookId
                </td>
                <td>
                    @books[i].Title
                </td>
                <td>
                    @books[i].Keeper
                </td>
            </tr>
        }
    </table>
}

<h1>Deleting book by BookId</h1>
<h2>Step 2</h2>

@using (Html.BeginForm("DeleteBookById", "Book"))
{
    <fieldset>
        <legend>Enter books ID for it's deleting</legend>
        <div>
            <label>
                @ShowList(ViewBag.Books)
            </label>

            <label>Book ID:</label>
            @Html.TextBox("strBookId")
        </div>

        <input type="submit" name="submitbutton" value="OK"/>

        <div>
            <label>Back to main menu </label>
        </div>
        <input type="submit" name="submitbutton" value="Home" />
    </fieldset>
}
